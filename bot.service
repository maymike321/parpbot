[Unit]
Description=Parpbot

[Service]
ExecStart=/home/ec2-user/parpbot/bot.js
Restart=always
User=nobody
# Note Debian/Ubuntu uses 'nogroup', RHEL/Fedora uses 'nobody'
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/home/ec2-user/parpbot

[Install]
WantedBy=multi-user.target